<div class="d-flex justify-content-between">
    <h3>Lista de Categorias: </h3>
    <a href="/admin/categorias/add"><button class="btn btn-info"><i class="bi bi-file-earmark-plus"></i> Cadastrar</button></a>
</div>
<hr>

 {{#each categorias}}
    <div class="card mt-4 mb-2 pl-3 pr-3">
        <div class="card-body">
            <h5>{{descricao}}</h5>
            <small>Slug: {{slug}}</small><br>
            <small>{{date}}</small><br>
            <hr>
            <div class="d-flex justify-content-end">
                <a href="/admin/categorias/edit/{{_id}}">
                    <button class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Editar</button>
                </a>
                <form action="/admin/categorias/deletar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"> </i>Deletar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="mt-3">
        <p class="text-muted">Nenhuma categoria encontrada</p>
    </div>  
 {{/each}}
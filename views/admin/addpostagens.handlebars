{{#each erros}}
    <div class="alert alert-warning alert-dismissible" role="alert">
        {{texto}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{else}}
{{/each}}

<div class="card  border-invisible">
    <div class="card-header text-white bg-info"><h4>Cadastro de Postagens</h4></div>
    <div class="card-body pl-5 pr-5 highlight">
        <form action="/admin/postagens/nova" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="titulo">Título</label>
                    <input type="text" id="titulo" class="form-control" name="titulo">
                </div>
                <div class="form-group col-md-6">
                    <label for="slug">Slug</label>
                    <input type="text" id="slug" class="form-control" name="slug">
                </div>    
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="descricao">Descrição</label>
                    <input type="text" name="descricao" class="form-control">
                </div>
                <div class="form-group col-md-6">
                    <label for="categoria">Categoria</label>
                    <select name="categoria" class="form-control">
                        <option disabled value="0">Selecione a categoria...</option>
                        {{#each categorias}}
                            <option value="{{_id}}">{{descricao}}</option>
                        {{else}}
                            <option value="0">Nenhuma categoria registrada</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="conteudo">Conteúdo</label>
                    <textarea name="conteudo" rows="3" class="form-control"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
        </form>
    </div>
</div>
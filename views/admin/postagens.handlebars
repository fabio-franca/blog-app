<div class="d-flex justify-content-between">
    <h3>Lista de Postagens: </h3>
    <a href="/admin/postagens/add"><button class="btn btn-info"><i class="bi bi-file-earmark-plus"></i> Cadastrar</button></a>
</div>
<hr>

{{#each postagens}}
    <div class="card mt-4 mb-2 pl-3 pr-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small class="badge badge-info">{{categoria.descricao}}</small><br>
            <p>Descrição: {{descricao}}</p>
            <p>{{conteudo}}</p>
            <small>Data: {{data}}</small>
            <hr>
            <div class="d-flex justify-content-end">
                <a href="/admin/postagens/edit/{{_id}}">
                    <button class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Editar</button>
                </a>
                <a href="/admin/postagens/deletar/{{_id}}">
                    <button class="btn btn-danger"><i class="bi bi-trash"></i> Deletar</button>
                </a>
            </div>
        </div>
    </div>
{{else}}
    <p class="text-muted">Nenhuma postagem registrada</p>
{{/each}}
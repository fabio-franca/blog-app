{{#each erros}}
    <div class="alert alert-warning alert-dismissible" role="alert">
        {{texto}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{else}}
{{/each}}
<div class="card  border-invisible">
    <div class="card-header text-white bg-info"><h4>Editar Categoria</h4></div>
    <div class="card-body pl-5 pr-5 highlight">
        <form action="/admin/categorias/edit" method="POST">
        <input type="hidden" name="id" value="{{categoria._id}}">
            <div class="form-row">
                <div class="col-md-6">
                    <label for="descricao">Descrição</label>
                    <input type="text" id="descricao" class="form-control" name="descricao" 
                        placeholder="Descrição da categoria" value="{{categoria.descricao}}">
                </div>
                <div class="col-md-6">
                    <label for="slug">Slug</label>
                    <input type="text" id="slug" class="form-control" name="slug" value="{{categoria.slug}}">
                </div>    
            </div>
            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
            
        </form>
    </div>
</div>